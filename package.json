{
  "name": "customer-support-tool",
  "version": "1.0.0",
  "description": "A comprehensive customer support desktop application with User Management, Ticket System, and Quality Management",
  "main": "electron/main.js",
  "scripts": {
    "start": "node server.js",
    "start:server": "node server.js",
    "start:electron": "electron .",
    "dev": "node server.js",
    "electron": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "customer-support",
    "ticket-system",
    "user-management",
    "quality-management",
    "electron",
    "desktop-app"
  ],
  "author": "Customer Support Agency",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "sql.js": "^1.12.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.customersupport.tool",
    "productName": "Customer Support Tool",
    "copyright": "Copyright Â© 2024 Customer Support Agency",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "config/**/*",
      "electron/**/*",
      "src/**/*",
      "server.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icons",
      "category": "Office"
    }
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:lru-cache@^10.4.3"
  }
}
